@model WebApp5EMVC.Models.View.DetailViewModel
@{
    Layout = "~/Views/Shared/_LayoutBasePage.cshtml";
}

@if (Model.Prodotto != null)
{
    <section class="my-5">

        <div class="row">
            <div class="col-md-6 mb-4 mb-md-0">

                <div id="mdb-lightbox-ui"></div>

                <div class="mdb-lightbox">

                    <div class="row product-gallery mx-1">

                        <div class="col-12 mb-0">
                            <figure class="view overlay rounded z-depth-1 main-img">
                                <img src="@WebApp5EMVC.Helpers.PathHelper.GetProdottoImagePath(Model.Prodotto)"
                                        class="img-fluid z-depth-1">
                            </figure>
                        </div>
                    </div>

                </div>

            </div>
            <div class="col-md-6">

                <h4>@Model.Prodotto.Nome</h4>
                <p><span class="mr-1"><strong>€@Model.Prodotto.Prezzo</strong></span></p>
                <p class="pt-1">
                    @Model.Prodotto.Descrizione
                </p>
                <div class="table-responsive">
                    <table class="table table-sm table-borderless mb-0">
                        <tbody>
                            <tr>
                                <th class="pl-0 w-25" scope="row"><strong>@Model.QuantitaLabel</strong></th>
                                <td>@Model.Prodotto.Quantita</td>
                            </tr>
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </section>
}
else
{
    <h2>@ViewBag.Title</h2>
    <p>@Model.MessaggioErrore</p>
}

