@model WebApp5EMVC.Models.View.IndexARViewModel

@{
    Layout = "~/Views/Shared/_LayoutBasePage.cshtml";
}

<h2>@Model.LabelTitolo</h2>
<div class="mb-3">
    @using (Html.BeginForm("Index", "AreaRiservata", FormMethod.Post, new { id = "signUpForm" }))
    {
        @Html.AntiForgeryToken()

        <div class="mb-3">
            <label for="inputEmail" class="form-label">@Model.LabelEmail</label>
            @Html.TextBoxFor(t => t.Utente.Email, new { type = "email", placeholder = Model.LabelEmail, @class = "form-control", id = "inputEmail", maxlength = "255", @readonly="true" })
        </div>

        <div class="mb-3">
            <label for="inputPassword" class="form-label">@Model.LabelPassword</label>
            @Html.PasswordFor(t => t.Password, new { placeholder = Model.LabelPassword, @class = "form-control", id = "inputPassword", maxlength = "255" })
        </div>

        <div class="mb-3">
            <label for="inputConfirmPassword" class="form-label">@Model.LabelConfermaPassword</label>
            @Html.PasswordFor(t => t.ConfermaPassword, new { placeholder = Model.LabelConfermaPassword, @class = "form-control", id = "inputConfirmPassword", maxlength = "255" })
        </div>

        <div class="mb-3">
            <label for="inputName" class="form-label">@Model.LabelNome</label>
            @Html.TextBoxFor(t => t.Utente.Nome, new { placeholder = Model.LabelNome, @class = "form-control", id = "inputName", maxlength = "255" })
        </div>

        <button id="submitButton" type="submit" class="btn btn-primary">@Model.LabelBottone</button>
    }
</div>


@if (!string.IsNullOrWhiteSpace(Model.Messaggio))
{
    <div class="alert alert-@(Model.IsSuccesso? "success" : "danger") role="alert">
        @Html.Raw(Model.Messaggio)
    </div>

}